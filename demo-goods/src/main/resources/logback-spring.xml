<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="true" scan="true" scanPeriod="30 minutes">

    <springProperty scope="context" name="logback.project.level" source="logback.project.level"/>
    <springProperty scope="context" name="logback.spring.level" source="logback.spring.level"/>
    <springProperty scope="context" name="spring.application.name" source="spring.application.name"/>

    <jmxConfigurator/>
    <timestamp key="byTime" datePattern="yyyy-MM-dd"/>
    <!-- 控制台输出日志 -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>[%d{yyyy-MM-dd HH:mm:ss.SSS} %thread] %-5level ${spring.application.name}-%logger{36} - %msg%n</pattern>
        </layout>
    </appender>
    <!-- 文件输出日志 (文件大小策略进行文件输出，超过指定大小对文件备份) -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>/log/server/demo-basic-finchley/${spring.application.name}.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <FileNamePattern>/log/server/demo-basic-finchley/zip/demo-basic-finchley_log.${spring.application.name}.%i.zip
            </FileNamePattern>
            <MinIndex>1</MinIndex>
            <MaxIndex>20</MaxIndex>
        </rollingPolicy>
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <MaxFileSize>200MB</MaxFileSize>
        </triggeringPolicy>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>[%d{yyyy-MM-dd HH:mm:ss.SSS} %thread] %-5level ${spring.application.name}-%logger{36} - %msg%n</Pattern>
        </layout>
    </appender>

    <!--这里指定logger name 是为jmx设置日志级别做铺垫 -->
    <logger name="org.springframework">
        <level value="${logback.spring.level}"/>
        <appender-ref ref="FILE"/>
        <appender-ref ref="STDOUT"/>
    </logger>
    <logger name="com.lynchj">
        <level value="${logback.project.level}"/>
        <appender-ref ref="FILE"/>
        <appender-ref ref="STDOUT"/>
    </logger>

</configuration>